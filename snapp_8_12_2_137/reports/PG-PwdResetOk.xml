<?xml version="1.0" encoding="UTF-8" standalone="no"?><DOEnt_DocTemplate><Header><EntityType>37</EntityType><EntityId>433CCBA6-7261-91C8-00B5-0180D6528E54</EntityId><LastUpdate>2022-05-18T11:55:00.000+0200</LastUpdate></Header><DocTemplate><IconName>doctemplate.png</IconName><EntityType>37</EntityType><DocTemplateId>433CCBA6-7261-91C8-00B5-0180D6528E54</DocTemplateId><DocTemplateName>Reset password success landing page</DocTemplateName><DocTemplateCode>RESETPWDLANDPAG</DocTemplateCode><DocEnabled>true</DocEnabled><ExecRequireLogin>true</ExecRequireLogin><DocTemplateType>27</DocTemplateType><DocEditorType>8</DocEditorType><DocData unescaped="true"><![CDATA[<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <title>SnApp Reset reset password</title>
<script>
function callResetPassword() { 
  var pwd = $("#pwd").val();
  var pwdConf = $("#pwdConf").val();
  if (pwd) {
    if (pwd == pwdConf) {
      var req = {
        Header: {
          WorkstationId: "[@WorkstationId]"
        },
        Request: {
          Command: "ResetPassword",
          ResetPassword: {
            VerifyCode: "[@VerifyCode]",
            Password: $("#pwd").val()          
        }
      }
    }
    $.ajax({
      url: "[@ResetPasswordApiURL{format:raw}]",
      type: "POST",
      data: JSON.stringify(req),
      dataType: "json",
      contentType: "application/json; charset=UTF-8"
    }).always(function(jqXHR, textStatus, jqXHRorErrorThrown) {
        if (jqXHRorErrorThrown.responseJSON) {
          if (jqXHRorErrorThrown.responseJSON.Header.StatusCode == 200) {
            alert("Your password has been succesfully reset"); 
            window.location="[@LoginPageURL]";
          }
          else 
            alert(jqXHRorErrorThrown.responseJSON.Header.ErrorMessage); 
        }
        else 
          alert(textStatus + " " + jqXHRorErrorThrown); 
          
      });
    }
    else 
      alert("Passwords mismatch");
  }
  else 
    alert("Password cannot be blank")
}
</script>
</head>
<body>
  <div>
    <h2>Reset password</h2>
    <form>
      <div>[@PasswordRuleInfo]</div>
      <div style="margin-top:10px"><input type="password" name="pwd" id="pwd" placeholder="Enter password"></div>
      <div style="margin-top:10px"><input type="password" name="pwdConf" id="pwdConf" placeholder="Confirm password"></div>
      <div style="margin-top:20px"><button type="button" onclick="callResetPassword();">Confirm</button></div>
    </form>
  </div>
</body>

